<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.jortec.jorliano.transporte.fragmento.TransporteFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagem"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/tb"
               android:layout_marginTop="10dp"
               android:layout_below="@id/imagem"
               android:background="@android:color/holo_green_dark">

               <!-- 2 columns -->
               <TableRow
                   android:id="@+id/tableRow1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="5dip" >

                   <TextView
                       android:id="@+id/textView1"
                       android:text="Modelo"
                       android:textAppearance="?android:attr/textAppearanceLarge" />

                   <TextView
                       android:id="@+id/tv_modelo"
                       android:layout_marginLeft="20dp"
                       android:textAppearance="?android:attr/textAppearanceLarge" />
               </TableRow>
               <!-- 2 columns -->
               <TableRow
                   android:id="@+id/tableRow2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="5dip" >

                   <TextView
                       android:id="@+id/textView2"
                       android:text="Marca"
                       android:textAppearance="?android:attr/textAppearanceLarge" />

                   <TextView
                       android:id="@+id/tv_marca"
                       android:layout_marginLeft="20dp"
                       android:textAppearance="?android:attr/textAppearanceLarge" />
               </TableRow>
               <!-- 2 columns -->
               <TableRow
                   android:id="@+id/tableRow3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="5dip" >

                   <TextView
                       android:id="@+id/textView3"
                       android:text="Ano"
                       android:textAppearance="?android:attr/textAppearanceLarge" />

                   <TextView
                       android:id="@+id/tv_ano"
                       android:layout_marginLeft="20dp"
                       android:textAppearance="?android:attr/textAppearanceLarge" />
               </TableRow>
               <!-- 2 columns -->
               <TableRow
                   android:id="@+id/tableRow4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="5dip" >

                   <TextView
                       android:id="@+id/textView4"
                       android:text="Km"
                       android:textAppearance="?android:attr/textAppearanceLarge" />

                   <TextView
                       android:id="@+id/tv_km"
                       android:layout_marginLeft="20dp"
                       android:textAppearance="?android:attr/textAppearanceLarge" />
               </TableRow>
               <!-- 2 columns -->
               <TableRow
                   android:id="@+id/tableRow5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="5dip" >

                   <TextView
                       android:id="@+id/textView5"
                       android:text="PotÃªncia"
                       android:textAppearance="?android:attr/textAppearanceLarge" />

                   <TextView
                       android:id="@+id/tv_potencia"
                       android:layout_marginLeft="20dp"
                       android:textAppearance="?android:attr/textAppearanceLarge" />
               </TableRow>

           </TableLayout>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_transporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_edit"
        app:backgroundTint="@color/primary"
        app:borderWidth="0dp"
        app:fabSize="normal" />

</FrameLayout>
